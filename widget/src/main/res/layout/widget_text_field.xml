<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_text_field"
        app:prefixTextAppearance="@style/text_subtitle_appearance"
        app:prefixTextColor="?attr/ga_text_color"
        app:suffixTextAppearance="@style/text_subtitle_appearance"
        app:suffixTextColor="?attr/ga_text_color"
        tools:helperText="This is Helper text"
        tools:hintAnimationEnabled="false"
        tools:prefixText="+62"
        tools:suffixText="Suffix">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <id.amita.gudangaja.widget.text.TextSubtitle
        android:id="@+id/tv_label_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text Field Label"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>