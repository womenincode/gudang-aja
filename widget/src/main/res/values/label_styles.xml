<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_title_x_large_appearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/ga_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_large_appearance" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/ga_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_appearance" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/ga_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_subtitle_appearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/ga_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_subtitle_small_appearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/ga_text_color</item>
    </style>

    <style name="text_body_normal_appearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/ga_text_color</item>
    </style>

    <style name="text_body_appearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <attr name="text_title_x_large_style" format="reference" />
    <attr name="text_title_large_style" format="reference" />
    <attr name="text_title_style" format="reference" />
    <attr name="text_subtitle_style" format="reference" />
    <attr name="text_subtitle_small_style" format="reference" />
    <attr name="text_body_normal_style" format="reference" />
    <attr name="text_body_style" format="reference" />

    <attr name="ga_text_color" format="reference" />
</resources>